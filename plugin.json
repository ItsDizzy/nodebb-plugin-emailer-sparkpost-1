{
    "id": "nodebb-plugin-emailer-sparkpost",
    "name": "Emailer (Sparkpost)",
    "description": "Sparkpost Emailer for NodeBB",
    "url": "https://github.com/rainlake/nodebb-plugin-emailer-sparkpost",
    "library": "./index.js",
    "templates": "templates",
    "hooks": [
        { "hook": "filter:email.send", "method": "send" },
        { "hook": "filter:admin.header.build", "method": "admin.menu" },
        { "hook": "static:app.load", "method": "init" }
    ]
}
